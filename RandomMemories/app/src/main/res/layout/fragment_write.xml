<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.example.randommemories.ui.main.WriteViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="84dp"
            android:paddingHorizontal="@dimen/write_frag_padding"
            android:paddingTop="38dp"
            android:paddingBottom="@dimen/app_bottom_margin">

            <Button
                android:id="@+id/print_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="print"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.example.randommemories.ui.main.LinedEditText
                android:id="@+id/edit_text"
                style="@style/NoBottomLineTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:gravity="top"
                android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
                android:text="@{vm.currentText}"
                app:layout_constraintBottom_toTopOf="@id/buttonsBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonsBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/space">

                <TextView
                    android:id="@+id/char_counter"
                    style="@style/word_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="0/100" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_button"
                    style="@style/Button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:foregroundTint="@color/red"
                    android:padding="0dp"
                    app:icon="@drawable/checkcircle"
                    app:iconTint="@color/red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/snooze_button"
                    style="@style/Button"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="12dp"
                    android:foregroundTint="@color/red"
                    android:padding="0dp"
                    android:visibility="visible"
                    app:icon="@drawable/snooze_new"
                    app:iconTint="@color/light_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/continue_button"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bottom_margin"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>
