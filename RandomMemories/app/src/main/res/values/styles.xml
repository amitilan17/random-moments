<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="onboarding_title">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/greta_medium_italic</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="app_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/narkiss_tam_light</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="app_text_Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/narkiss_tam_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="app_text_Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/narkiss_tam_light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="hint_text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/narkiss_tam_light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="onboarding_bullet">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/greta_bold_italic</item>
        <item name="android:textSize">18sp</item>
    </style>

