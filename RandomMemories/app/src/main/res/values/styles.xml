    <style name="squareDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:dialogCornerRadius">0dp</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/eighty_kb_sharp_bold</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="ButtonStart">
        <item name="android:background">@drawable/bg_bottom_line</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/eighty_kb_sharp_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="minWidth">20dp</item>
    </style>

    <style name="ButtonNoPadding">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/eighty_kb_sharp_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonDemo">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="fontFamily">@font/eighty_kb_sharp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="logo">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/eighty_kb_sharp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="word_counter">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:fontFamily">@font/eighty_kb_sharp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NoBottomLineTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/narkiss_tam_light</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.RandomMemories</item>
        <item name="windowSplashScreenBackground">@color/bg</item>
    </style>

</resources>